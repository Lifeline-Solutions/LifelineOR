<div>
  <h1 class="font-bold text-4xl">Pages#home</h1>
  <p>Find me in app/views/pages/home.html.erb</p>
  <% if user_signed_in? %>
    <p>Hi <strong><%= current_user.email %></strong></p>
    <p><%= link_to "Edit Registration", edit_user_registration_path %></p>
    <p><%= link_to "Logout", destroy_user_session_path, method: :delete, data:{turbo_method: :delete}%></p>

<% else %>
    <p><%= link_to "Sign Up", new_user_registration_path %></p>
    <p><%= link_to "Login", new_user_session_path %>></p>
  <% end %>

  <!--Generate a QR code that uses both -->
  <div class="font-bold">
    <p>Generate a QR code that uses both</p>
    <p>the URL and the title of the page</p>
  </div>

</div>



